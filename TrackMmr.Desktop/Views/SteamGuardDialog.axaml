<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TrackMmr.Desktop.Views.SteamGuardDialog"
        Title="Steam Guard"
        Width="350" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="Height">
    <StackPanel Margin="24" Spacing="12">
        <TextBlock x:Name="MessageText" Text="Enter Steam Guard code:" FontSize="14" TextWrapping="Wrap"/>
        <TextBox x:Name="CodeInput" Watermark="Code" MaxLength="10" FontSize="16" HorizontalContentAlignment="Center"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Classes="accent"/>
    </StackPanel>
</Window>
