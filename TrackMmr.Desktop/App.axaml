<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TrackMmr.Desktop.App"
             xmlns:local="using:TrackMmr.Desktop"
             xmlns:conv="using:TrackMmr.Desktop.Converters"
             x:DataType="local:App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <conv:IntToBoolConverter x:Key="IntToBoolConverter"/>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="avares://TrackMmr.Desktop/Assets/avalonia-logo.ico" ToolTipText="Dota 2 MMR Tracker">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Show Tracker" Command="{Binding ToggleWindowCommand}"/>
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Exit" Command="{Binding ExitAppCommand}"/>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>
