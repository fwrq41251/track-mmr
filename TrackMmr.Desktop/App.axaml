<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TrackMmr.Desktop.App"
             xmlns:local="using:TrackMmr.Desktop"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/avalonia-logo.ico" ToolTipText="Dota 2 MMR Tracker">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Show Tracker" Click="ToggleWindow_Click"/>
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Exit" Click="ExitApp_Click"/>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>